server {
        listen 443 ssl;
        server_name django_api_domain.com;

        location / {
                proxy_pass https://localhost:8000;

        }
        ssl_certificate /etc/letsencrypt/live/django_api_domain.com/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/django_api_domain.com/privkey.pem;
}